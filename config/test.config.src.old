%% -*- erlang -*-
[{ballgame, [
    {players, [
        [1,2]
    ]},
    % {fakeplayers, [
    %     ["LaymerZ370","LaymerMac"]
    % ]},
    {matchmaker, ballgame_matchmaker},
    % {number, 1},
    {testing,   false}
]},

{partisan, [{partisan_peer_service_manager,
            partisan_hyparview_peer_service_manager},
            {peer_port, 20001},
            {acceptor_pool_size, 3},
            {tls, false},
            {fanout, 3},
            {gossip, true},
            {gossip_interval, 20000},
            {max_active_size, 4},
            {max_passive_size, 20},
            {min_active_size, 3},
            {name, {{release_name}}},
            {passive_view_shuffle_period, 20000},
            {channels, [1]}
]},

{grisp, [
    {drivers, [
        {spi, grisp_spi_drv_emu},
        {gpio, grisp_gpio_drv_emu},
        {i2c, grisp_i2c_drv_emu}
    ]},
    {devices, [
        {spi1, pmod_nav},
        {spi2, pmod_gyro}
    ]}
]},

{lager, [
  {handlers, [
    {lager_console_backend, [{level, info}]}
  ]}
]},

{logger, [
  {level, debug}
  % {level, notice}
]},

{kernel, [
    % {logger_level, notice},
    {logger_level, debug},
    {logger, [{handler,
      default,
      logger_std_h,
      #{level => debug,
      % #{level => notice,
        formatter => {logger_formatter, #{single_line => true}}}
   }]}
]}].

